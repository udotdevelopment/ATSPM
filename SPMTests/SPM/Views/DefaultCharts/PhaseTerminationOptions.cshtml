@model MOE.Common.Business.WCFServiceLibrary.PhaseTerminationOptions
<div class="card">
    <div class="card-header">Phase Termination Options</div>
    <div class="card-body">
        <div class="">
            @Html.LabelFor(model => model.YAxisMax, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.YAxisMax, new { htmlAttributes = new { @class = "form-control", placeholder = "Auto" } })
        </div>
        <div class="">
            @Html.LabelFor(model => model.SelectedConsecutiveCount, new { htmlAttributes = new { @class = "control-label" } })
            @Html.DropDownListFor(model => model.SelectedConsecutiveCount,
            new SelectList(Model.ConsecutiveCountList, 15), new { @id = "SelectedConsecutiveCount", @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(model => model.SelectedConsecutiveCount, "", new { id = "SelectedConsecutiveCount-error", @class = "text-danger" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowPlanStripes, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowPlanStripes, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowPedActivity, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowPedActivity, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        </div>
    </div>

