@model SPM.Models.MeasuresDefaultsViewModel

<div id="split-fail-options" role="tablist" aria-multiselectable="true" class="card mr-4 ml-4">
    <div class="card-header" role="tab">
        <a onclick="rotate(this)" data-toggle="collapse" data-parent="#split-fail-options" href="#split-fail-options-collapse" aria-expanded="false" aria-controls="split-fail-options-collapse">
            <i class="fa fa-chevron-right mr-3" aria-hidden="true"></i> Split Fail
        </a>
    </div>
    <div id="split-fail-options-collapse" class="collapse" role="tabpanel">
        <div class="card-body">
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.SplitFail.FirstSecondsOfRed, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.SplitFail.FirstSecondsOfRed, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SplitFail.FirstSecondsOfRed, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.SplitFail.ShowAvgLines, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.SplitFail.ShowAvgLines)
                    @Html.ValidationMessageFor(model => model.SplitFail.ShowAvgLines, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.SplitFail.ShowFailLines, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.SplitFail.ShowFailLines)
                    @Html.ValidationMessageFor(model => model.SplitFail.ShowFailLines, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.SplitFail.ShowPercentFailLines, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.SplitFail.ShowPercentFailLines)
                    @Html.ValidationMessageFor(model => model.SplitFail.ShowPercentFailLines, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
