@model MOE.Common.Business.WCFServiceLibrary.TMCOptions

<div class="card">
    <div class="card-header">Turning Movement Counts Options </div>
    <div class="card-body">
        <div class="">
            @Html.LabelFor(model => model.YAxisMax, "Thru Movement Y-axis Max", new { htmlAttributes = new { @class = "control-label"} })
            @Html.EditorFor(model => model.YAxisMax, new { htmlAttributes = new { @class = "form-control", placeholder = "Auto" } })
        </div>
        <div class="">
            @Html.LabelFor(model => model.Y2AxisMax, "Turn Movement Y- axis Max", new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.Y2AxisMax, new { htmlAttributes = new { @class = "form-control", placeholder = "Auto" } })
        </div>
        <div class="">
            @Html.LabelFor(model => model.SelectedBinSize, new { htmlAttributes = new { @class = "control-label" } })
            @Html.DropDownListFor(model => model.SelectedBinSize,
                 new SelectList(Model.BinSizeList, 15), new { @id = "SelectedBinSize", @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(model => model.SelectedBinSize, "", new { @class = "text-danger" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowLaneVolumes, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowLaneVolumes, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowTotalVolumes, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowTotalVolumes, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowDataTable, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowDataTable, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        </div></div>


